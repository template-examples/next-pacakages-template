{
  "extends": "../../../tsconfig.base.json",
  "compilerOptions": {
    "outDir": "out/",
    "rootDir": ".",
    "composite": true,
    "allowJs": true,
    "skipLibCheck": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "noEmit": true,
    "esModuleInterop": true
  },
  "include": ["**/*.ts", "**/*.tsx"],
  "exclude": ["node_modules", "dist"]
}
